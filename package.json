{
  "name": "notepad",
  "version": "1.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.seungmin.notepad",
    "productName": "notepad advance",
    "icon": "image/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist",
      "!src",
      "!.git",
      "!.vscode",
      "!*.md"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "seungminbluebox",
      "repo": "notepad-electron"
    },
    "mac": {
      "target": []
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
